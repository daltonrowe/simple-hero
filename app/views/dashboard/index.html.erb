<% if @pending_seats.any? %>
<section class="flex flex-col gap-2">
  <h2 class="font-bold text-2xl">Your Pending Seats</h2>

  <div class="flex flex-col gap-2">
    <%= render PendingSeatComponent.with_collection(@pending_seats, user: Current.user) %>
  </div>
</section>
<% end %>

<section class="flex flex-col gap-4">
  <h2 class="font-bold text-4xl">Today's Status</h2>

  <div class="flex flex-col gap-2">
    <%= render EmptySectionNoticeComponent.new(text: 'You\'re not a member of any teams') if Current.user.all_alone? %>
  </div>
</section>

<section class="flex gap-2">
  <%= render LinkComponent.new(text: "Account Settings", to: dashboard_user_path, style: :outlined, level: :secondary) %>
</section>
