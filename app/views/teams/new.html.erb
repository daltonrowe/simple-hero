<h1 class="font-bold text-4xl">Create a Team</h1>

<%= form_with model: @team, url: teams_url, class: "contents flex flex-col gap-4" do |form| %>
  <%= form.text_field :name, required: true, autofocus: true, placeholder: "My Awesome Team", class: "block shadow-sm rounded-md border border-gray-400 focus:outline-solid focus:outline-blue-600 px-3 py-2  w-full" %>

  <%# TODO: Set end of day time, disallow nil %>
  
  <%# TODO: Remove timezone %>
  <%= form.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {}, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-solid focus:outline-blue-600 px-3 py-2  w-full" %>

  <%= render ButtonComponent.new(text: "Create team", type: :submit)%>
<% end %>