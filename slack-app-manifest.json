{
    "display_information": {
        "name": "Simple Team",
        "description": "Status updates and retro tool",
        "background_color": "#805199"
    },
    "features": {
        "bot_user": {
            "display_name": "Simple Team",
            "always_online": true
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write",
                "chat:write.public",
                "commands",
                "team:read",
                "users:read",
                "app_mentions:read"
            ]
        }
    },
    "settings": {
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}